{
  "manifest_version": 3,
  "name": "CodeWhisper AI",
  "version": "1.0.0",
  "description": "AI coding assistant for LeetCode â€” type a comment, and watch it write code in real time while solving problems.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "devtools",
    "tabs"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.leetcode.com/*"],
      "js": ["content.js"],
      "css": ["loading.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "devtools_page": "devtools.html",
  "side_panel": {
    "default_path": "devtools.html"
  }
}